<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="product">
	<sql id="shoppingmallId">
		<where>
			<if test="shoppingmallId !=null">
				shoppingmall_id=#{shoppingmallId}
			</if>
		</where>
	</sql>
	<select id="count" resultType="Integer">
		select count(*) from mymall.product where shoppingmall_id=#{shoppingmallId}
	</select>
	<delete id="delete">
		delete from mymall.product where shoppingmall_id=#{shoppingmallId}
	</delete>
	<insert id="add">
		insert into mymall.product (name,img,price,url,shoppingmall_id) values ( #{name},#{img},#{price},#{url},#{shoppingmallId})
	</insert>
	
	<select id="list" resultType="Product">
		select p.*,(select user_id from likes l where p.id=l.product_id and l.user_id=#{userId}) as user_id
		from product p
		<include refid="shoppingmallId"></include> ORDER BY id
		LIMIT #{offset},#{perPager} 
	</select>
	
	<select id="total" resultType="Integer">
		select count(*) from product <include refid="shoppingmallId"></include>
	</select>
</mapper>