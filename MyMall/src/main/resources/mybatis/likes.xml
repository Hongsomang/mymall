<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="likes">
	<sql id="delete_type">
		<if test="userId != null and productId != null">
			user_id=#{userId} and product_id=#{productId}
		</if>
		<if test="shoppingmallId !=null">
			product_id in (select p.id from product p where shoppingmall_id=#{shoppingmallId})
		</if>
	</sql>
	<insert id="add">
		insert into likes values (#{userId},#{productId})
	</insert>
	<delete id="delete">
		delete from likes where <include refid="delete_type"></include>
	</delete>
</mapper>